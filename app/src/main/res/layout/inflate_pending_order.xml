<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:background="@drawable/btn_rectangular_white"
    android:elevation="@dimen/_3sdp"
    android:orientation="vertical"
    tools:ignore="SpUsage">

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@color/red"
        android:fontFamily="@font/fira_sans_regular"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_3sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_3sdp"
        android:text="@string/pending"
        android:textColor="@color/white"
        android:textSize="@dimen/_11sdp" />

    <TextView
        android:id="@+id/tvOrderNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fira_sans_medium"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:text="#78786668"
        android:textColor="@color/textBlack"
        android:textSize="@dimen/_15sdp" />

    <RelativeLayout
        android:id="@+id/rlDiscount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/tvDiscountAmount"
            android:fontFamily="@font/fira_sans_regular"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:text="@string/discount"
            android:textColor="@color/textGrey"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tvDiscountAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/fira_sans_medium"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:text="75"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/_12sdp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/tvAmount"
            android:fontFamily="@font/fira_sans_regular"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:text="cc"
            android:textColor="@color/textGrey"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/fira_sans_medium"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:text="75"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/_12sdp" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llAcceptReject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/tvAccept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/btn_rectangular_green_left"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="@string/accept"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/tvReject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/btn_rectangular_red_right"
            android:backgroundTint="@color/red"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="@string/reject"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/dotted_line" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp">
    <TextView
        android:id="@+id/tvRateUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_centerVertical="true"
        android:fontFamily="@font/fira_sans_medium"
        android:textColor="@color/green"
        android:text="@string/rateCustomer"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_10sdp" />
    <TextView
        android:id="@+id/tvTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/fira_sans_medium"
        android:textColor="@color/textBlack"
        android:layout_centerVertical="true"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_10sdp" />
</RelativeLayout>


</LinearLayout>