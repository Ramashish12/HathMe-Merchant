<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="code.activity.RateUserActivity"
        tools:ignore="SpUsage">

        <include
            android:id="@+id/header"
            layout="@layout/inflate_header2" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_25sdp"
            android:src="@drawable/ic_user_default" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/fira_sans_medium"
            android:text="User Name"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/fira_sans_regular"
            android:text=""
            android:textColor="@color/textBlack"
            android:textSize="@dimen/_11sdp" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:progressTint="@color/golden"
            android:secondaryProgressTint="@color/golden"
            android:stepSize="1.0" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/et_rectangular_border"
            android:fontFamily="@font/fira_sans_regular"
            android:gravity="top|start"
            android:hint="@string/description"
            android:inputType="textCapSentences"
            android:maxLength="250"
            android:padding="@dimen/_8sdp" />



        <TextView
            android:id="@+id/tvContinue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/btn_rectangular"
            android:fontFamily="@font/fira_sans_sem_bold"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="@string/continuee"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp" />

    </LinearLayout>
