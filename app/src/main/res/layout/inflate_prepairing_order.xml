<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="SpUsage"
    android:layout_margin="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_15sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:backgroundTint="#4DDADADA"
            android:background="@drawable/rectangular_top_radius">

            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/fira_sans_medium"
                android:text="Item Name"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/tvCustomerLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Location"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_11sdp"
                android:layout_toStartOf="@+id/tvReady"
                android:layout_alignParentStart="true"

                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_below="@+id/tvCustomerName"
                android:textColor="@color/textBlack"
                android:fontFamily="@font/fira_sans_regular"/>

            <TextView
                android:id="@+id/tvReady"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/btn_rectangular_less_radius"
                android:fontFamily="@font/fira_sans_regular"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="@string/orderReady"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/tvOrderNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fira_sans_medium"
                android:text="Item Name"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Location"
                android:textSize="@dimen/_11sdp"
                android:visibility="gone"
                android:layout_below="@+id/tvOrderNo"
                android:textColor="@color/textBlack"
                android:fontFamily="@font/fira_sans_regular"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvOrderNo"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_toStartOf="@+id/ivCall" />

            <ImageView
                android:id="@+id/ivCall"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@mipmap/call"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@color/textBlack"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/circle_bg"
                android:src="@drawable/ic_check"
                android:padding="@dimen/_3sdp"
                android:backgroundTint="@color/green"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placed"
                android:textSize="@dimen/_13sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:textColor="@color/textBlack"
                android:layout_centerVertical="true"
                android:fontFamily="@font/fira_sans_medium"/>

            <TextView
                android:id="@+id/tvPlacedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_30sdp"
                android:fontFamily="@font/fira_sans_medium"
                android:text="1:03 PM"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/_13sdp" />

        </RelativeLayout>

        <View
            android:layout_width="@dimen/_2sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:background="@color/green"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/circle_bg"
                android:src="@drawable/ic_check"
                android:padding="@dimen/_3sdp"
                android:backgroundTint="@color/green"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_30sdp"
                android:fontFamily="@font/fira_sans_medium"
                android:text="@string/accepted"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/tvAcceptedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:03 PM"
                android:textSize="@dimen/_13sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:textColor="@color/textBlack"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/fira_sans_medium"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>