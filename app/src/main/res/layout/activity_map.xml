<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="SpUsage"
    tools:context="code.activity.MapActivity">

    <include
        android:id="@+id/header"
        layout="@layout/inflate_header2"/>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        class="code.common.MySupportMapFragment"
        android:layout_width="match_parent"
        android:layout_below="@+id/header"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/ivMarker"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_location" />


    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/btn_rectangular_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivLocation"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_map_marker_double" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toEndOf="@+id/ivLocation"
                android:fontFamily="@font/fira_sans_medium"
                android:textColor="@color/textBlack"
                android:layout_toStartOf="@+id/tvChange"
                android:layout_marginEnd="@dimen/_5sdp"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/tvSubAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAddress"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toStartOf="@+id/tvChange"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toEndOf="@+id/ivLocation"
                android:fontFamily="@font/fira_sans_regular"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/tvChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/fira_sans_medium"
                android:text="@string/change"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_10sdp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_rectangular_less_radius"
            android:fontFamily="@font/fira_sans_sem_bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:padding="@dimen/_8sdp"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />

    </LinearLayout>


</RelativeLayout>