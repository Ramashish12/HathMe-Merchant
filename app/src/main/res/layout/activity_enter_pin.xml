<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="SpUsage"
    tools:context="code.basic.EnterPinActivity">
    <include
        android:id="@+id/header"
        layout="@layout/inflate_header2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_bags" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:fontFamily="@font/fira_sans_medium"
            android:text="@string/enterPin"
            android:textSize="@dimen/_15sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textBlack"
            android:layout_gravity="center"
            android:fontFamily="@font/fira_sans_regular"
            android:text="@string/enter4DigitPin"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textSize="@dimen/_11sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etPin1"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/et_rectangular_border_no_radius"
                android:gravity="center"
                android:hint="*"
                android:layout_marginEnd="@dimen/_35sdp"
                android:inputType="number"
                android:maxLength="1" />

            <EditText
                android:id="@+id/etPin2"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/et_rectangular_border_no_radius"
                android:gravity="center"
                android:hint="*"
                android:inputType="number"
                android:layout_marginEnd="@dimen/_35sdp"
                android:maxLength="1" />

            <EditText
                android:id="@+id/etPin3"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/et_rectangular_border_no_radius"
                android:gravity="center"
                android:hint="*"
                android:layout_marginEnd="@dimen/_35sdp"
                android:inputType="number"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/etPin4"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/et_rectangular_border_no_radius"
                android:gravity="center"
                android:hint="*"
                android:inputType="number" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvSubmit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:background="@drawable/btn_rectangular"
            android:fontFamily="@font/fira_sans_sem_bold"
            android:gravity="center"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:padding="@dimen/_8sdp"
            android:text="@string/submit"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp" />


    </LinearLayout>

</RelativeLayout>